{% extends "layout/dashboard.html.twig" %}

{% block content %}
    <div class="min-h-screen bg-gray-900 flex flex-col items-center py-8">
        <div class="w-full max-w-5xl mx-auto">
            <div class="flex gap-6 mb-8">
                {% include 'layout/components/card.html.twig' with { 
                    title: 'Délits', 
                    value: totalDelits|number_format(0, ',', ' '), 
                    variation: (delitsVariation > 0 ?? '') ~ delitsVariation,
                    variation_color: '#22c55e'
                } %}
                {% include 'layout/components/card.html.twig' with { 
                    title: 'Politiciens', 
                    value: totalPoliticiens|number_format(0, ',', ' '), 
                    variation: (politiciensVariation > 0 ?? '') ~ politiciensVariation, 
                    variation_color: '#22c55e'
                } %}
                {% include 'layout/components/card.html.twig' with { 
                    title: 'Partenaires', 
                    value: totalPartenaires|number_format(0, ',', ' '), 
                    variation: (partenairesVariation > 0 ?? '') ~ partenairesVariation,
                    variation_color: '#22c55e'
                } %}
            </div>
            
            <div class="bg-gray-800 rounded-lg p-6">
                <h2 class="text-xl font-semibold text-gray-200 mb-4">Activités récentes</h2>
                <div class="space-y-4">
                    {% if recentActivities is empty %}
                        <p class="text-gray-400 text-center py-8">Aucune activité récente</p>
                    {% else %}
                        {% for activity in recentActivities %}
                            {% include 'layout/components/activity_item.html.twig' with {
                                icon: activity.icon,
                                text: activity.text,
                                date: activity.date
                            } %}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends "layout/base.html.twig" %}

{% block content %}
<div class="min-h-screen flex flex-col items-center justify-center bg-gray-900">
    <div class="w-full max-w-md mx-auto p-8 rounded-lg flex flex-col items-center">
        <h2 class="text-white text-2xl font-bold mb-1">PoliTricks</h2>
        <p class="text-xs text-gray-400 mb-6">Tracking and analysis of political offenses</p>
        
        {% if error %}
            <div class="bg-red-700 text-white rounded px-3 py-2 mb-4 w-full text-center text-sm">{{ error }}</div>
        {% endif %}
        
        <form method="post" class="w-full flex flex-col gap-3">
            <div class="grid grid-cols-2 gap-3">
                <input type="text" name="firstName" placeholder="Prénom" required class="bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" value="{{ form_data.firstName|default('') }}" />
                <input type="text" name="lastName" placeholder="Nom" required class="bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" value="{{ form_data.lastName|default('') }}" />
            </div>

            <input type="email" name="email" placeholder="Email" required class="bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" value="{{ form_data.email|default('') }}" />

            <input type="password" name="password" placeholder="Mot de passe" required class="bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <input type="password" name="confirm_password" placeholder="Confirmer le mot de passe" required class="bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />

            <input type="tel" name="telephone" placeholder="Téléphone (optionnel)" class="bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" value="{{ form_data.telephone|default('') }}" />
            
            <div class="grid grid-cols-2 gap-3">
                <input type="date" name="dateNaissance" placeholder="Date de naissance" class="bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" value="{{ form_data.dateNaissance|default('') }}" />
                <input type="text" name="nationalite" placeholder="Nationalité" class="bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" value="{{ form_data.nationalite|default('') }}" />
            </div>
            
            <input type="text" name="profession" placeholder="Profession (optionnel)" class="bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" value="{{ form_data.profession|default('') }}" />
            
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium rounded py-2 mt-2 transition-colors">S'inscrire</button>
        </form>
        
        <a href="/login" class="text-xs text-gray-400 mt-3 hover:underline">Déjà un compte ?</a>
    </div>
</div>
{% endblock %}

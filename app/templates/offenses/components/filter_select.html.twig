<div>
    <label class="block text-gray-300 text-sm mb-2" for="{{ name }}">{{ label }}</label>
    <select id="{{ name }}" name="{{ name }}" class="filter-select w-full bg-gray-800 text-gray-200 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
        {% for option in options %}
            <option>{{ option }}</option>
        {% endfor %}
    </select>
</div> 